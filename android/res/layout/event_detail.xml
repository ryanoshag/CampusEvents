<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="9dp">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Build A Bear"
            android:id="@+id/title" android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday, September 24th, 11am - 12pm"
            android:id="@+id/time" android:paddingTop="3dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Student Center"
            android:id="@+id/location" android:paddingTop="3dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Build a Bear workshop at the Student Center. Come create your own bear!"
            android:id="@+id/description" android:paddingTop="3dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Calendar"
                android:id="@+id/calendarButton" android:layout_gravity="center_horizontal|bottom" android:layout_weight="1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Directions"
                android:id="@+id/findDirections" android:layout_gravity="center_horizontal|bottom" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>